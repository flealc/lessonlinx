<%= render "shared/breadcrumbs" %>

<div data-controller="students-index side-bar" class="row h-100">

  <%= render partial: "shared/sidebar", 
    locals: { 
      toggle_button_action: "click->side-bar#toggleFullPage",
      array_to_iterate: current_user.students,
      link_path: ->(student_id) { student_lessons_path(student_id) },
      frame: "lessons-student"
      } %>

  <div class="col-9 col-sm-10" data-controller="students-index" data-side-bar-target="contentArea">
    <div class="d-flex">
      <div class="me-2" data-action="click->side-bar#toggleFullPage">
        <i class="fa-solid fa-angles-left" data-side-bar-target="toggleIcon" ></i>
      </div>
      <div class="h5"><%= @student.full_name %></div>
    </div>
    
    <% if @lessons.any? %>

      <div class="d-flex justify-content-between flex-wrap align-items-center">
        <%= render partial: "lessons/filter" %>

        <div class="pe-3 d-flex align-items-center">
        <%= submit_tag "delete selected", data: { turbo_confirm: "Are you sure?" }, class: "btn btn-link btn-sm ms-1 px-0 py-0 text-nowrap", form: "bulk-delete", style: "color: black;" %>
          <%= label_tag "select_all", "Select all", class: "mx-1 mb-1 form-text" %>
          <%= check_box_tag "select_all", "1", false, id: "select_all", data: { action: "change->students-index#selectAll" } %>
         
        </div>
      </div>
      <%= form_with(url: bulk_delete_student_lessons_path(@student), id: "bulk-delete", method: :delete) do |form| %>
        <%# form.hidden_field "lessons[]" %>
        <hr class="my-0">
        <div class="overflow-auto mb-0" style="max-height: 75vh;">
          <% @lessons.each do |lesson| %>
            <div class="card my-2">
              <div class="card-header pb-1">
                <div class="row align-items-center">
                  <div class="col-10 col-sm-8 col-md-auto d-flex align-items-center">
                    <div class="text-nowrap">
                      <%= lesson.starts_at.strftime("%a, %-d %b, %Y") %>
                    </div>
                  </div>
                  <div class="col-10 col-sm-8 col-md-auto d-flex justify-content-start mt-2 mt-sm-0">
                    <div class="text-body-secondary">
                      <%= lesson.starts_at.strftime("%I:%M%P") %>
                    </div>
                  </div>
                  <div class="col-2 col-sm-4 col-md-auto ms-auto">
                    <%= check_box_tag "lessons[]", lesson.id, false, :id => dom_id(lesson), data: {students_index_target: "checkbox"} %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <hr class="my-0">
      <% end %>
    </div>

  <% else %>

    <h6> There are no lessons scheduled for this student.</h6>
  <% end %>
</div>

</div>
</div>
