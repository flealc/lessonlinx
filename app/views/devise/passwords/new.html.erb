<div class="h2">Forgot your password?</div>

<%= form_with(model:resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  

  <div class="form-group col-md-4 mb-4">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                class: "form-control" %>
  </div>

  <div class="form-actions mb-4">
    <%= f.submit "Send me reset password instructions", class: "btn btn-outline-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
