<div class="h2">Your account</div>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), method: :put, local: true) do |f| %>

  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <% resource.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', autocomplete: 'new-password', placeholder: "Leave blank if you don't want to change it" %>
  </div>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'new-password' %>
  </div>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :timezone %>
    <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.all, { prompt: "Select your current timezone" }, { class: 'form-control' } %>
  </div>

  <div data-controller="digest-signup" data-digest-signup-signedup-value="<%= current_user.daily_digest_at != nil %>" data-digest-signup-link-value="https://www.lessonlinx.pro/subscribe/<%= current_user.id %>">
    <div class="input-group mt-3">
    <span class="input-group-text">Copy calendar subscription link</span>
    <button data-digest-signup-target="copyButton" class="btn btn-outline-dark" type="button" data-action="click->digest-signup#copyLink"><i class="fa-regular fa-clipboard"></i></button>
    </div>
    <div class="form-check form-switch mt-4">
      <input class="form-check-input" type="checkbox" role="switch" id="dailyDigestSwitch" data-digest-signup-target="signupSwitch" data-action="click->digest-signup#toggleDigest" >

      <label class="form-check-label" for="dailyDigestSwitch">Sign up for daily digest</label>
    </div>
    <div class="form-group mb-2 col-md-3" data-digest-signup-target="deliverAtGroup">
      <div class="d-flex align-items-center">
        <%= f.label :daily_digest_at, "Deliver at", class: "w-50" %>
        <%= f.time_field :daily_digest_at, class: 'form-control', required: false, html5: true, autocomplete: "Select a time", data: { digest_signup_target: "deliverAtField" } %>
      </div>
    </div>

  </div>

  <div class="actions my-5">

    <div class="form-group col-md-6 mb-2">
      <%= f.label :current_password, "Authorize your changes" %>
      <div class="form-text mb-1">Please enter your current password to save any changes to your account</div>
      <%= f.password_field :current_password, class: 'form-control col-md-6', autocomplete: 'current-password', required: true, placeholder: "Enter current password" %>
    </div>
    <%= f.submit "Update", class: "btn btn-outline-dark" %>
    <%= link_to "Back", :back, class: "btn btn-outline-dark" %>
  </div>
<% end %>

<div class="h2 mt-3">Cancel account</div>

<div> 🙁 Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure? All your information will be permanently deleted!" }, method: :delete, class: "btn btn-outline-danger my-2" %></div>
