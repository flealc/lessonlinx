<div class="h2">Sign up</div>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <% resource.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', autocomplete: 'new-password' %>
  </div>

  <div class="form-group col-md-6 mb-2">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'new-password' %>
  </div>
  
  <div class="form-group col-md-6 mb-2">
    <%= f.label :timezone %>
    <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.all, { prompt: "Select your current timezone", priority_zones: ActiveSupport::TimeZone.us_zones, default: "Central Time (US & Canada)" }, { class: 'form-control' } %>
  </div>

  <div class="form-actions my-4">
    <%= f.button "Sign up", class: "btn btn-primary" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
