<div id="<%= dom_id contact %>" data-controller="card">
  <div class="card">
    <div class="card-header pb-1" data-action="click->card#expandCard" data-card-target="cardTitleBar">
      <h6 class="card-title d-flex justify-content-between">
        <span>
          <%= contact.full_name %>
          <% if contact.default? == true %>
            <i class="fa-solid fa-square-check"></i>
          <% end %>
        </span>
        <i class="fa-solid fa-angle-down" data-card-target="expandCardArrow"></i>
      </h6>
      <h6 class="card-subtitle mb-2 text-body-secondary">
        <%= contact.relationship %>
      </h6>

    </div>
    <div class="card-body collapse" data-card-target="cardBody">
      <%= render "contacts/contact_details", contact: contact %>
      
    
      <%= link_to "edit contact", edit_contact_path(contact), data: { turbo_frame: "_top" }, class: "h6 me-3" %>
      <%= link_to "delete contact", contact_path(contact), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "h6" %>
    </div>


  </div>

</div>
