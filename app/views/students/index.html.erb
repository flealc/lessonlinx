<div data-controller="side-bar" data-side-bar-show-value="<%= image_path('show-sidebar.svg') %>" data-side-bar-hide-value="<%= image_path('hide-sidebar.svg') %>" >
  <div class="d-flex align-items-end">
    <div class="h1 mb-0 pb-0 ps-sm-2 col-5 col-sm-2">Students</div>
    <div class="mb-1 col-7 col-sm-10 ps-sm-3">
      <%= link_to "new", new_student_path, data: { turbo_frame: "_top" }, class:"h6 ps-sm-2" %>
    </div>
  </div>
  <hr class="my-2">


  <%= render partial: "shared/sidebar", 
    locals: { 
      array_to_iterate: current_user.students,
      link_path: ->(student_id) { student_path(student_id) },
      frame: "student-details"
      } %>

  <div class="col-9 col-sm-10 mt-1 px-0" data-side-bar-target="contentArea">
      <div class="bg-body-tertiary h-100 text-center py-5 px-5 text-wrap mx-3 placeholder-custom rounded-3">Your students' information will be displayed here.
      </div>
  </div>

</div>
</div>
