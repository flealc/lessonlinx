<%= turbo_frame_tag "student-details" do %>
  <p style="color: green"><%= notice %></p>

  <%= render @student %>

  <div>
    <%= link_to "Edit info", edit_student_path(@student) %>
  </div>

  <p class="h5 mt-2">Contacts</p>
  <%= turbo_frame_tag "student-contacts" do %>
    <div class="row">
      <% @student.contacts.each do |contact| %>
        <div class="col-12 col-sm-4 pb-2">
          <%= render contact %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
