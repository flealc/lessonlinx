<div data-controller="side-bar">
  <div class="d-flex align-items-end justify-content-between">
    <div class="h1 mb-0 pb-0 ps-sm-2 col-5 col-sm-2">Students</div>
    <div class="mb-1 me-sm-2 ps-4">
      <%= link_to "new", new_student_path, data: { turbo_frame: "_top" }, class:"h6 ps-sm-2" %>
    </div>
  </div>
  <hr class="my-2">

  <%= render partial: "shared/sidebar", 
    locals: { 
      array_to_iterate: current_user.students,
      link_path: ->(student_id) { student_path(student_id) },
      frame: "_top"
      } %>

  <div class="col-9 col-sm-10 mt-2" data-side-bar-target="contentArea">
    <% if current_user.students.any? %>      
        <%= render @student %>
    <% end %>

  </div>

</div>
