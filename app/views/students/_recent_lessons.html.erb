<%= turbo_frame_tag "recent_lessons_frame" do %>
<div class="h5 mt-2"><%= @student.full_name %></div>

  <% if @student.upcoming_lesson.present? %>
    <div class="h6 mt-3">Upcoming lesson</div>
  <hr class="mt-0">
    <%= render "students/upcoming_lesson", student: @student %>
  <% end %>

    <div class="h6 mt-3">Previous lessons</div>
  <hr class="mt-0">
  <div data-bs-spy="scroll" data-bs-target="" data-bs-smooth-scroll="true" class="scrollspy-example-2" tabindex="0">
    <% @recent_lessons.each do |lesson| %>
      <%= render 'users/dashboard_lesson', lesson: lesson %>
    <% end %>
  </div>

<% end %>
